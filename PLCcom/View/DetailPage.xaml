<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLCcom.DetailPage"             
             xmlns:viewmodel="clr-namespace:PLCcom.ViewModel"
             x:DataType="viewmodel:DetailViewModel"
             Title="DetailPage">

    <StackLayout Padding="40"
                 Margin="10" 
                 Spacing="10">
        
        <Button WidthRequest="200"
                Text="Check Internet"
                FontAttributes="Bold"
                Command="{Binding CheckInternetCommand}"
                HorizontalOptions="Center" />

        <Button WidthRequest="200"
            Text="Go Back"
                Command="{Binding BackCommand}"
                HorizontalOptions="Center"/>

        <Button WidthRequest="200"
            Text="Go to SetupPage"
                Command="{Binding GoToSetupCommand}"
                HorizontalOptions="Center"/>

        <Button WidthRequest="200"
            Text="Go to Another One"
                Command="{Binding GoToAnotherCommand}"
                HorizontalOptions="Center"/>

        <!--<Label FontSize="50"
               Text="{Binding Count}"/>

        <Label FontSize="50"
               Text="{Binding Monkey.Name}"/>-->
      
    </StackLayout>
</ContentPage>